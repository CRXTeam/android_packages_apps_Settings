<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/cpa_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

	<!-- Animation Controls -->
	<PreferenceScreen
            android:key="animation"
            android:title="@string/cpa_animation_title"
            android:summary="@string/cpa_animation_summary"
            android:fragment="com.android.settings.cpa.Animation"
            />

        <!-- Status Bar -->
        <PreferenceScreen
            android:key="status_bar"
            android:title="@string/cpa_status_bar_title"
            android:summary="@string/cpa_status_bar_summary"
            android:fragment="com.android.settings.cpa.StatusBar"
            />

        <!-- Notification drawer -->
        <PreferenceScreen
            android:key="notification_drawer"
            android:title="@string/cpa_notification_drawer_title"
            android:summary="@string/cpa_notification_drawer_summary"
            android:fragment="com.android.settings.cpa.NotificationDrawer"
            />

        <!-- Lockscreen shortcuts -->
        <PreferenceScreen
            android:key="lockscreen_shortcuts_settings"
            android:title="@string/cpa_lockscreen_shortcuts_title"
            android:summary="@string/cpa_lockscreen_shortcuts_summary"
            android:fragment="com.android.settings.cpa.LockscreenShortcuts"
            />

        <!-- CPU Time in state -->
        <PreferenceScreen
            android:key="cpustat_menu"
            android:title="@string/cpa_cpustates_title"
            android:summary="@string/cpa_cpustates_summary"
            android:fragment="com.android.settings.cpa.cpustats.TimeInState"
           />
           
        <!-- Superuser -->
        <PreferenceScreen
            android:id="@+id/superuser_settings"
            android:title="@string/cpa_superuser_title"
            android:summary="@string/cpa_superuser_summary"
            android:fragment="com.android.settings.cyanogenmod.superuser.PolicyNativeFragment"
            />

</PreferenceScreen>


